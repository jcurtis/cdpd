!!! 5
html(lang="en")
  head
    != SocketStream
    meta(charset="utf-8")
    title cdpd: code with friends
  body
    .topbar
      .topbar-inner
        .container-fluid
          a.brand cdpd
          ul.nav 
            li 
              a(href="https://github.com/jcurtis/cdpd"
              target="_blank") repo
            li
              a#undo undo
            li
              a#redo redo
            li.dropdown(data-dropdown="dropdown")
              a.dropdown-toggle highlighting
              ul.dropdown-menu
                li
                  a plain-text
                li
                  a coffeescript
                li.divider
                li
                  a mysql
          p(class="pull-right") A work in progress...

    .container-fluid
      .sidebar#chat
        #messageContainer
          #messages

        form#sendMessage
          input(id='newMessage', type='text', name='message', autocomplete='off')
          input(id='sendButton', type='submit', value='Send')

      .content
        #editor
          textarea#code
